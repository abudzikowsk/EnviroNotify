@model List<EnviroNotify.Dashboard.Models.IndexViewModel>

@{
    Layout = "_Layout";
}

<ejs-chart id="container" title="Humidity">
    <e-chart-primaryxaxis valueType="DateTimeCategory" intervalType="Hours"></e-chart-primaryxaxis>
    <e-chart-tooltipsettings enable="true" header="Humidity" format="<b>${point.x} : ${point.y}%</b>"></e-chart-tooltipsettings>
    <e-series-collection>
        <e-series dataSource="@Model" name="Humidity" xName="DateTime" width="2" opacity="1" yName="Humidity" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Line">
            <e-series-marker visible="true" shape="Circle"></e-series-marker>
        </e-series>
    </e-series-collection>
</ejs-chart>

<ejs-chart id="container2" title="Temperature">
    <e-chart-primaryxaxis valueType="DateTimeCategory" intervalType="Hours"></e-chart-primaryxaxis>
    <e-chart-primaryyaxis valueType="Double" labelFormat="0.0"></e-chart-primaryyaxis>
    <e-chart-tooltipsettings enable="true" header="Temperature" format="<b>${point.x} : ${point.y}C</b>"></e-chart-tooltipsettings>
    <e-series-collection>
        <e-series dataSource="@Model" name="Temperature" xName="DateTime" width="2" opacity="1" yName="Temperature" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Line">
            <e-series-marker visible="true" shape="Circle"></e-series-marker>
        </e-series>
    </e-series-collection>
</ejs-chart>

